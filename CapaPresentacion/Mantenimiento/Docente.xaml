<Window x:Class="CapaPresentacion.Mantenimiento.Docente"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CapaPresentacion.Mantenimiento"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="                                                                                                         Docente">

    <Grid Margin="0,0,0,-131">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF5353BD" Offset="0.978"/>
                <GradientStop Color="#FFD8D8DE"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="Código :" HorizontalAlignment="Left" Margin="45,37,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.763,-0.154"/>
        <Label Content="Nombres :" HorizontalAlignment="Left" Margin="45,80,0,0" VerticalAlignment="Top"/>
        <Label Content="Apellidos :" HorizontalAlignment="Left" Margin="45,121,0,0" VerticalAlignment="Top"/>
        <Label Content="Correo :" HorizontalAlignment="Left" Margin="45,162,0,0" VerticalAlignment="Top"/>
        <Label Content="Domicilio :" HorizontalAlignment="Left" Margin="45,204,0,0" VerticalAlignment="Top"/>
        <Label Content="Fecha de Nacimiento :" HorizontalAlignment="Left" Margin="45,312,0,0" VerticalAlignment="Top"/>
        <Label Content="Numero de Celular" HorizontalAlignment="Left" Margin="45,250,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtcodigo" HorizontalAlignment="Left" Height="23" Margin="178,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145"/>
        <TextBox x:Name="txtnombres" HorizontalAlignment="Left" Height="23" Margin="178,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145"/>
        <TextBox x:Name="txtapellidos" HorizontalAlignment="Left" Height="23" Margin="178,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145"/>
        <TextBox x:Name="txtcorreo" HorizontalAlignment="Left" Height="23" Margin="178,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145"/>
        <TextBox x:Name="txtdomicilio" HorizontalAlignment="Left" Height="23" Margin="178,208,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145"/>
        <TextBox x:Name="txtnumCel" HorizontalAlignment="Left" Height="23" Margin="178,254,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145"/>
        <DatePicker x:Name="dateFechaNac" HorizontalAlignment="Left" Margin="178,312,0,0" VerticalAlignment="Top"/>
        <Label Content="Lugar de Nacimiento :" HorizontalAlignment="Left" Margin="45,371,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtlugarNac" HorizontalAlignment="Left" Height="23" Margin="178,371,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145"/>
        <Button x:Name="btnLeer1" Content="Escribir" HorizontalAlignment="Left" Margin="449,37,0,0" VerticalAlignment="Top" Width="75" Click="btnLeer_Click"/>
        <Button x:Name="btnLeer" Content="Leer" HorizontalAlignment="Left" Margin="449,80,0,0" VerticalAlignment="Top" Width="75" Click="btnEscribir_Click"/>
        <Button x:Name="btnMetodo1" Content="Metodo1" HorizontalAlignment="Left" Margin="449,133,0,0" VerticalAlignment="Top" Width="75" Click="btnMetodo1_Click"/>
        <Button x:Name="btnMetodo2" Content="Metodo2" HorizontalAlignment="Left" Margin="599,37,0,0" VerticalAlignment="Top" Width="75" Click="btnMetodo2_Click"/>
        <Button x:Name="btnMetodo3" Content="Metodo3" HorizontalAlignment="Left" Margin="599,83,0,0" VerticalAlignment="Top" Width="75" Click="btnMetodo3_Click"/>
        <Button x:Name="btnMetodo4" Content="Metodo4" HorizontalAlignment="Left" Margin="599,132,0,0" VerticalAlignment="Top" Width="75" Click="btnMetodo4_Click"/>
        <Label Content="AFP :" HorizontalAlignment="Left" Margin="45,424,0,0" VerticalAlignment="Top" Width="127"/>
        <Label Content="Cursos :" HorizontalAlignment="Left" Margin="45,466,0,0" VerticalAlignment="Top" Width="127"/>
        <Label Content="Facultad :" HorizontalAlignment="Left" Margin="45,506,0,0" VerticalAlignment="Top" Width="127"/>
        <TextBox x:Name="txtafp" HorizontalAlignment="Left" Height="23" Margin="178,427,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145"/>
        <TextBox x:Name="txtcursos" HorizontalAlignment="Left" Height="23" Margin="178,466,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145"/>
        <TextBox x:Name="txtfacultad" HorizontalAlignment="Left" Height="23" Margin="178,506,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145"/>

    </Grid>
</Window>
